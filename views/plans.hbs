<link rel="stylesheet" href="/public/styles/styles.css" />
<main>
	<section class="intro-section-blue text-light text-center text-sm-start">
		<div class="container">
			<div class="d-sm-flex justify-content-center">
				<div class="me-5 w-50">
					<h2 class="d-sm-flex justify-content-center">Event: {{{eventName}}}</h2>
					<!-- <p class="lead my-4 fw-bold">Your Cliques</p> -->
				</div>
			</div>
		</div>
	</section>

	<section>
		<div class="container">
			<div class="d-flex flex-wrap">
				{{#each plans}}
				<div class="p-2 m-4">
					<div class="card shadow p-3 mb-5 bg-body rounded" style="width: 18rem">
						<div class="card-body">
							<h5 class="card-title text-center">
									{{{dataValues.event.event_name}}}/{{{dataValues.plan_name}}}
							</h5>
							<h5><a href="plans/add" class="btn btn-primary" onclick="alert('add plan screen')">Create Plan</a></h5>
							<p class="card-text">{{{dataValues.plan_desc}}}</p>
							<p><em>Created by: you</em></p>
							<a href="#" class="btn btn-primary">More details</a>
						</div>
					</div>
				</div>
				{{/each}}
			</div>
		</div>
	</section>
</main>